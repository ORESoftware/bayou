{
  "compilerOptions": {
    "declaration": true,
    "compileOnSave": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "allowUnreachableCode": true,
    "lib": ["es2015"]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}